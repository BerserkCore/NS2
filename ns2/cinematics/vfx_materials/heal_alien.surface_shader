<shader>	<inputs>		<input name="noiseMap" type="texture" address="wrap" />		<input name="timeLastHealed" type="float" />	</inputs>		<params>		<param name="twoSided">false</param>		<param name="alphaTest">false</param>	</params>		<code>	<![CDATA[		void MaterialShader(in Material_Input input, inout Material material)		{			const float3 tint = float3(.2, .4, .05);			const float animationDuration = 2;			const float pulseAnimationDuration = 0.7;			            float t = time - timeLastHealed;            float animFraction = 1 - clamp(t / animationDuration, 0, 1);			float pulseAnimFraction = 1 - clamp(t / pulseAnimationDuration, 0, 1);				float3 noise = tex2D(noiseMap, input.texCoord  + float2(0.3, -0.3) * time).rgb; 			float3 veins = tex2D(noiseMap, input.texCoord * 1.2).rgb; 			material.emissive = (veins * .35 + pow(veins * noise, 2) * 30 * pulseAnimFraction * float3(1, 1, 0)) * tint * animFraction;		}	]]>	</code></shader>